function define {
    sdcv --color "$1" | less -r
}

function random() {
    echo $(($(od -N3 -An -i /dev/urandom) % ($1+1)))
}

[ -f ~/.fzf.bash ] && source ~/.fzf.bash

function org2hand {
    out=$(echo "$1" | rev | cut -d"." -f2-  | rev).pdf
    pandoc $1 -o "$out" --from org --template eisvogel  --variable colorlinks=true --highlight pygments --listings --toc
}
